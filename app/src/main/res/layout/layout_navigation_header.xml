<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutNavigationHeader"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_background_navigation"
        tools:layout_editor_absoluteX="18dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="40dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            android:src="@drawable/old_man"
            app:layout_constraintStart_toStartOf="parent"
            app:riv_oval="true"
            tools:layout_editor_absoluteY="16dp" />

        <View
            android:id="@+id/viewSupporter"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/NavigationHeaderName"
                android:layout_width="305dp"
                android:layout_height="21dp"
                android:text="SebastiÃ£o"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/TypeOfUser"
                android:layout_width="100dp"
                android:layout_height="22dp"
                android:text="Disabled User"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

