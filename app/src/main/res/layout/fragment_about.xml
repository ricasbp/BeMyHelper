<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/be_my_helper"
        android:layout_marginVertical="10sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:gravity="left"
            android:textStyle="bold"
            android:text="About">

        </TextView>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="textStart"
        android:text="  Mobility is one of the foundations of our prosperity.\n  The purpose of this application is to help everyone achieving the right to mobility.\n  If you have any kind of disability you can use this application to ask for help to nearby persons. You can also become a volunteer and help anyone.\n\n  This application was made by: Daniel Fino, Francisco Amaro, Ricardo LeitÃ£o and Ricardo Pedro." />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="right">

        <androidx.appcompat.widget.AppCompatButton
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_buttons_green"
            android:text="Saber mais"
            android:gravity="center"
            android:layout_gravity="bottom|right"
            />
    </LinearLayout>





</LinearLayout>