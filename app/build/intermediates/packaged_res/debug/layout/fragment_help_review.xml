<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/HelpReviewFragment"
    tools:context=".HelpReviewFragment"
    android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Review Menu"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="28sp">
        </TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_review"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_marginVertical="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:id="@+id/profile_helper_review_name"
            android:text="AntÃ³nio Casimiro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/profile_helper_review_Helper"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Helper"/>



        <RatingBar
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10sp"
            android:rating="3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:id="@+id/descriptionReview"
            android:hint="Insert here your review." />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/my_buttons"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="50sp"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Actual Review"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/estrelas"
            android:text = "Rating: N/A">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/review"
            android:text = "Review: N/A">
        </TextView>

</LinearLayout>