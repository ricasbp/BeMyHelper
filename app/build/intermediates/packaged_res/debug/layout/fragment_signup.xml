<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SignupFragment"
    tools:context=".SignupFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <LinearLayout
            android:id="@+id/ScrollViewButtons"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/botaovoltar"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginVertical="12dp"
                            android:layout_marginHorizontal="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="#FEFEFE"
                            app:srcCompat="@drawable/botaovoltar" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start|center_vertical"
                            android:text="Register"
                            android:textColor="#000000"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_buttons"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textColor="#5DAF75" />

                <EditText
                    android:id="@+id/name_edit_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/inputform"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/phoneNumber_textView"
                    android:layout_width="216dp"
                    android:layout_height="19dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:text="Phone number:"
                    android:textColor="#5DAF75"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/name_edit_TextTelemovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/inputform"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Email:"
                    android:textSize="16sp"
                    android:textColor="#5DAF75" />

                <EditText
                    android:id="@+id/email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/inputform"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Password:"
                    android:textSize="16sp"
                    android:textColor="#5DAF75" />

                <EditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/inputform"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Age:"
                    android:textSize="16sp"
                    android:textColor="#5DAF75" />

                <EditText
                    android:id="@+id/age_edit_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/inputform"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Any disabilities?"
                    android:textSize="16sp"
                    android:textColor="#5DAF75" />

                <CheckBox
                    android:id="@+id/checkBoxSim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Yes"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <LinearLayout
                    android:id="@+id/LinearLayoutCheckBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/checkBoxSim">

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="8dp"
                        android:text="Slight Motor Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Severe Motor Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Slight Auditive Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Severe Auditive Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Slight Visual Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Severe Visual Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />


                    <CheckBox
                        android:id="@+id/checkBoxDificuldade7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Slight Cognitive Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Severe Cognitive Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <CheckBox
                        android:id="@+id/checkBoxDificuldade9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:text="Communication Difficulty"
                        android:textSize="12sp"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Others: "
                        android:textSize="12sp"
                        android:textColor="#5DAF75" />

                    <EditText
                        android:id="@+id/editTextTextPersonName4"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/inputform"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="12sp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <CheckBox
                    android:id="@+id/checkBoxNao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="No"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LinearLayoutCheckBoxes" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/my_buttons"
                    android:text="Register"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
